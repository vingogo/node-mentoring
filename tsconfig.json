{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src",
        "types": ["reflect-metadata", "jest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "~data-access/*": ["data-access/*"],
            "~integration/*": ["integration/*"],
            "~api/*": ["api/*"],
            "~common/*": ["common/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
