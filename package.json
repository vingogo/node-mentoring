    "main": "index.js",
    "scripts": {
        "start": "tsc && node dist/app.js",
        "dev": "nodemon",
        "lint": "eslint --ext=js,ts src/**",
        "lint:fix": "npm run lint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git@gitpct.epam.com:Vladislav_Kudashev/vk-nodejs-mentoring.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.7",
        "@types/hapi__joi": "^17.1.4",
        "@types/http-errors": "^1.8.0",
        "@types/node": "^14.0.27",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@types/validator": "^13.1.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "http-errors": "^1.8.0",
        "http-status-codes": "^1.4.0",
        "pg": "^8.3.2",
        "sequelize": "^6.3.4",
        "tsconfig-paths": "^3.9.0",
        "tslib": "^2.0.1",
        "winston": "^3.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,ts}": [
            "npm run lint:fix --",
            "git add"
        ],
        "src/**/*.{js,ts,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
        "ext": "ts, js"
    }
}
